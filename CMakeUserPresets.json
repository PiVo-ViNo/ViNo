{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": ["dev-mode", "ci-linux", "cppcheck-unix64"],
      "cacheVariables": {
        "BUILD_DOCS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_SYSTEM_NAME": "Linux",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
      }
    },
    {
      "name": "dev-win64",
      "binaryDir": "${sourceDir}/build/dev-win64",
      "inherits": ["dev-mode", "ci-win64", "cppcheck-win64"],
      "cacheVariables": {
        "BUILD_DOCS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
      }
    },
    {
      "name": "dev-linux-to-win64",
      "binaryDir": "${sourceDir}/build/dev-linux-to-win64",
      "inherits": ["dev-mode", "ci-win64", "cppcheck-win64"],
      "cacheVariables": {
        "BUILD_DOCS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_COMPILER_PREFIX": "x86_64-w64-mingw32",
        "CMAKE_C_COMPILER": "x86_64-w64-mingw32-gcc",
        "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
        "CMAKE_RC_COMPILER": "x86_64-w64-mingw32-windres",        
        "CMAKE_FIND_ROOT_PATH": "/usr/x86_64-w64-mingw32",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
      }
    },
    {
      "name": "dev-win64-to-linux",
      "binaryDir": "${sourceDir}/build/dev-win64-to-linux",
      "inherits": ["dev-mode", "ci-cygwin", "cppcheck-unix64"],
      "cacheVariables": {
        "BUILD_DOCS": "ON",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_SYSTEM_NAME": "Linux",
        "CMAKE_C_COMPILER": "C:/cygwin64/usr/local/x86-unknown-linux-gnu/bin/x86_64-unknown-linux-gnu-gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/cygwin64/usr/local/x86-unknown-linux-gnu/bin/x86_64-unknown-linux-gnu-g++.exe",
        "CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "ONLY",
        "CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev-linux",
      "configurePreset": "dev-linux",
      "configuration": "Debug"
    },
    {
      "name": "dev-win64",
      "configurePreset": "dev-win64",
      "configuration": "Debug"
    },
    {
      "name": "dev-linux-to-win64",
      "configurePreset": "dev-linux-to-win64",
      "configuration": "Debug"
    },
    {
      "name": "dev-win64-to-linux",
      "configurePreset": "dev-win64-to-linux",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "dev-linux",
      "configurePreset": "dev-linux",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "dev-win64",
      "configurePreset": "dev-win64",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "dev-linux-to-win64",
      "configurePreset": "dev-linux-to-win64",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "dev-win64-to-linux",
      "configurePreset": "dev-win64-to-linux",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    }
  ]
}